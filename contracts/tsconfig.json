{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "*": ["node_modules/*"],
      "typechain-types": ["./contracts/typechain-types"]
    }
  },
  "include": ["./test", "./scripts", "./typechain-types", "../src"],
  "files": ["./hardhat.config.ts"]
}
